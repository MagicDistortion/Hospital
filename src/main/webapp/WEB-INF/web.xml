<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Archetype Created Web Application</display-name>

    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>

    <filter>
        <filter-name>encoding=filter</filter-name>
        <filter-class>project.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>encoding=filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Language=filter</filter-name>
        <filter-class>project.filter.LangFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Language=filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>doctor=filter</filter-name>
        <filter-class>project.filter.DoctorFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>doctor=filter</filter-name>
        <url-pattern>/doctors_only/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>admin=filter</filter-name>
        <filter-class>project.filter.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>admin=filter</filter-name>
        <url-pattern>/admins_only/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>doctor=filter</filter-name>
        <url-pattern>/doctors_only/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>patient=filter</filter-name>
        <filter-class>project.filter.PatientFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>patient=filter</filter-name>
        <url-pattern>/patients_only/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>nurse=filter</filter-name>
        <filter-class>project.filter.NurseFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>nurse=filter</filter-name>
        <url-pattern>/nurses_only/*</url-pattern>
    </filter-mapping>

</web-app>
